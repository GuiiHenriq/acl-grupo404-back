{
  "swagger": "2.0",
  "host": "localhost:2000",
  "basePath": "/",
  "info": {
    "title": "Grupo 404 micro-service",
    "description": "Micro-serviços GRUPO 404.",
    "version": "1.0.0"
  },
  "schemes": [
    "http",
    "https"
  ],
  "tags": [
    {
      "name": "User",
      "description": "Rotas para gerenciamento de usuários."
    },
    {
      "name": "Product",
      "description": "Rotas para o gerenciamento de produtos."
    },
    {
      "name": "Sales Order",
      "description": "Rotas para o gerenciamento de vendas."
    }
  ],
  "paths": {
    "/user": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Lista todos os usuários cadastrados",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Lista carregada com sucesso"
          },
          "400": {
            "description": "Erro ao carregar lista de usuários"
          }
        }
      },
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Insere um novo usuário",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Modelo de campos para inclusão de novo usuário",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Registro inserido com sucesso"
          },
          "400": {
            "description": "Falha ao inserir registro"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Autenticação do Usuário",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "email",
            "in": "header",
            "description": "Email do usuário cadastrado",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "header",
            "description": "senha do usuário cadastrado",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso"
          },
          "400": {
            "description": "Erro ao executar operação"
          }
        }
      }
    },
    "/user{id}": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Apresentar usuário selecionado conforme ID",
        "operationId": "getUserById",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do usuário a ser localizado",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "description": "ID Usuário Invalido"
          },
          "404": {
            "description": "ID não localizado"
          }
        }
      },
      "put": {
        "tags": [
          "User"
        ],
        "summary": "Atualiza os dados do usuário conforme ID",
        "operationId": "updateUser",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID a ser alterado",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Usuário atualizado",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "400": {
            "description": "ID Invalido"
          },
          "404": {
            "description": "Usuário não encontrado"
          }
        }
      },
      "delete": {
        "tags": [
          "User"
        ],
        "summary": "Deleta os dados do usuário informado pela ID",
        "operationId": "deleteUser",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Número do ID do usuário a ser deletado",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "400": {
            "description": "ID Invalido"
          },
          "404": {
            "description": "Usuário não encontrado"
          }
        }
      }
    },
    "/user/address": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Insere o endereço do usuário",
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso"
          },
          "400": {
            "description": "Erro ao executar operação"
          }
        }
      }
    },
    "/user/address{id}": {
      "put": {
        "tags": [
          "User"
        ],
        "summary": "Altera o endereço do usuário"
      },
      "delete": {
        "tags": [
          "User"
        ],
        "summary": "Deleta o endereço do usuário"
      }
    },
    "/user/{id}/orders": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Lista as ordens do usuário."
      }
    },
    "/product": {
      "get": {
        "tags": [
          "Product"
        ],
        "summary": "Lista os produtos cadastrados."
      },
      "post": {
        "tags": [
          "Product"
        ],
        "summary": "Cadastra novos produtos."
      }
    },
    "/product{id}": {
      "get": {
        "tags": [
          "Product"
        ],
        "summary": "Lista o produto conforme o ID."
      },
      "put": {
        "tags": [
          "Product"
        ],
        "summary": "Altera o produto conforme o ID."
      },
      "delete": {
        "tags": [
          "Product"
        ],
        "summary": "Deleta o produto conforme o ID."
      }
    },
    "/order": {
      "get": {
        "tags": [
          "Sales Order"
        ],
        "summary": "Lista todas as vendas."
      },
      "post": {
        "tags": [
          "Sales Order"
        ],
        "summary": "Insere uma nova venda."
      }
    },
    "/order{id}": {
      "get": {
        "tags": [
          "Sales Order"
        ],
        "summary": "Seleciona a venda conforme ID."
      },
      "put": {
        "tags": [
          "Sales Order"
        ],
        "summary": "Exclui a venda conforme ID."
      }
    }
  },
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Nome Sobrenome"
        },
        "email": {
          "type": "string",
          "example": "nome@dominio.com.br"
        },
        "phone": {
          "type": "string",
          "example": "(xx) xxxxx-xxxx"
        },
        "login": {
          "type": "string",
          "example": "Escolha um Login"
        },
        "password": {
          "type": "string",
          "example": "Insira uma senha forte"
        },
        "user_address": {
          "type": "string",
          "example": "Seu domicilio residencial"
        }
      },
      "required": [
        "name",
        "email",
        "phone",
        "login",
        "password",
        "user_address"
      ]
    },
    "UserAddress": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "user_id": {
          "type": "integer",
          "format": "int64"
        },
        "type_name": {
          "type": "string"
        },
        "cep": {
          "type": "string"
        },
        "street": {
          "type": "string"
        },
        "number": {
          "type": "string"
        },
        "complement": {
          "type": "string"
        },
        "district": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "cep",
        "number"
      ]
    },
    "UserProduct": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "user_id": {
          "type": "integer",
          "format": "int64"
        },
        "product_id": {
          "type": "integer",
          "format": "int64"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Status": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "code": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "SalesOrder": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "user_id": {
          "type": "integer",
          "format": "int64"
        },
        "status_id": {
          "type": "integer",
          "format": "int64"
        },
        "user_address_id": {
          "type": "integer",
          "format": "int64"
        },
        "total": {
          "type": "number",
          "format": "float"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "SalesOrderProducts": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "order_id": {
          "type": "integer",
          "format": "int64"
        },
        "product_id": {
          "type": "integer",
          "format": "int64"
        },
        "qty": {
          "type": "integer",
          "format": "int32"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Product": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "code": {
          "type": "string"
        },
        "active": {
          "type": "boolean",
          "default": false
        },
        "price": {
          "type": "integer",
          "format": "float",
          "example": "20.00"
        },
        "slug_url": {
          "type": "string"
        },
        "sku": {
          "type": "string"
        },
        "qty": {
          "type": "integer",
          "format": "int32"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "name",
        "description",
        "code",
        "active",
        "price",
        "qty"
      ]
    },
    "Image": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "product_id": {
          "type": "integer",
          "format": "int64"
        },
        "path": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "path"
      ]
    }
  }
}